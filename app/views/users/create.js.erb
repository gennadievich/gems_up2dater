$("#user-notifications").html("<%= j (render partial: "layouts/notifications") %>").slideDown(80);

<% unless flash[:success].blank? %>
  $("#users").html("<%= j (render partial: "users_list", locals: {users: @users}) %>");
  $("#user-form").slideUp(80);
  $("#show-user-form-button").show();
  $("#hide-user-form-button").hide();
<% end %>