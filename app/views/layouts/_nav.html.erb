<nav class="navbar navbar-default">
  <div class="container height-58px">
    <div class="navbar-header">
      <%= link_to "Gems up2dater", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if !current_user %>
          <li><%= link_to "Registration", register_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% elsif current_user %>
          <li><%= link_to "Welcome, #{ current_user.name }" %></li>
          <li class="dropdown">
            <%= link_to image_tag('menu.png', size: "30x23"), nil,
                        class: "dropdown-toggle", "data-toggle" => "dropdown",
                        role: "button", "aria-haspopup" => true, "aria-expanded" => false %>
            <ul class="dropdown-menu">
              <li><%= link_to "My page", user_path(current_user) %></li>
              <li><%= link_to "My projects" %></li>
              <li><%= link_to "Settings" %></li>
              <% if current_user.admin? %>
                <li role="separator" class="divider"></li>
                <li><%= link_to "All users", users_path %></li>
              <% end %>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
